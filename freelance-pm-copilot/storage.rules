rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to contracts/{contractId}/... paths
    match /contracts/{contractId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    // General rule for all other paths
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
